<UserControl x:Class="FineCarPivot.Controls.AuthLineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="60" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Image Source="/Assets/Images/icn-user.png" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0" Width="30"/>
        <TextBlock Grid.Column="1" Text="Пользователь: ivan" HorizontalAlignment="left" VerticalAlignment="Center" Margin="10" />
        <Button Style="{StaticResource ButtonAction}" Content="Выход" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Click="Button_Click_1" Height="Auto"/>
    </Grid>
</UserControl>