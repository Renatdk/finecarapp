<UserControl x:Class="FineCarPivot.Controls.ButtonTimeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="80" d:DesignWidth="80">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}"  >
        <Border Style="{Binding Path=BorderStyle}" Height="80" Width="80" >
            <TextBlock Text="{Binding Path=btnContent}" Name="btn" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>